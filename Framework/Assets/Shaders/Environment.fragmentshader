#version 330 core

// Ouput to fragment shader
out vec4 color;

in vec4 v_color;
in vec3 normal; 
in vec3 eyeVector;

uniform samplerCube skybox;

void main()
{	
	//vec3 eye = normalize(Position - cameraPos);
    vec3 reflect = reflect(eyeVector, normalize(normal));

	// set the fragment color to the interpolated vertex color
	color = texture(skybox, reflect) * v_color;
}